@model DoAn.Models.DanhGiaSanPham

@{
    ViewBag.Title = "Xóa đánh giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Xóa đánh giá</h3>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h5><i class="icon fas fa-exclamation-triangle"></i> Cảnh báo!</h5>
            Bạn có chắc chắn muốn xóa đánh giá này? Hành động này không thể hoàn tác.
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Sản phẩm:</label>
                    <p class="form-control-static">@Model.SanPham.tensp</p>
                </div>
                <div class="form-group">
                    <label>Người dùng:</label>
                    <p class="form-control-static">@Model.KhachHang.email</p>
                </div>
                <div class="form-group">
                    <label>Điểm đánh giá:</label>
                    <div class="rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="fas fa-star @(i <= Model.DiemDanhGia ? "text-warning" : "text-muted")"></i>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Ngày đánh giá:</label>
                    <p class="form-control-static">@Model.NgayDanhGia.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
                <div class="form-group">
                    <label>Nội dung đánh giá:</label>
                    <div class="card">
                        <div class="card-body">
                            @Model.NoiDungDanhGia
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Xác nhận xóa
                </button>
                <a href="@Url.Action("Index")" class="btn btn-default">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        }
    </div>
</div> 